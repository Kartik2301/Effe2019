<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#FFF8E1"
        android:layout_height="fill_parent" >

        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1" >

            <TableRow>
              <androidx.cardview.widget.CardView
                  android:layout_height="300dp"
                  android:elevation="10dp"
                  app:cardCornerRadius="5dp"
                  android:layout_width="wrap_content">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/someeevent"
                    android:layout_marginBottom="40dp">
                </ImageView>
              </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:padding="3dip"
                    android:textColor="#FF7043"
                    android:textSize="20sp"
                    android:text="An event in effervescence" >
                </TextView>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:text="19th October 2019" >
                </TextView>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="3dip"
                    android:textSize="16sp"
                    android:text="Main Auditorium" >
                </TextView>


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:maxLines="14"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries" >
                </TextView>

            </TableRow>
            <TableRow>

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"/>

            </TableRow>

        </TableLayout>
    </RelativeLayout>

</ScrollView>